@model OdeToFood.ViewModels.HomeIndexViewModel

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    <h1>@Model.CurrentMessage</h1>
    <table>
        @foreach (var restaurant in Model.Restaurants)
        {
            <tr>
                <td>@restaurant.Id</td>
                <td>@restaurant.Name</td>

                @*HTML*@
                <td> <a href="/home/details/@restaurant.Id"> Details </a></td>

                @*MVC.Framework*@
                <td> @Html.ActionLink("Go", "Details", new { id = restaurant.Id }) </td>

                @*ASP.NET CORE*@
                <td><a asp-action="Details" asp-route-id="@restaurant.Id"> More</a> </td>
            </tr>
        }
    </table>

    <div>
        <a asp-action="Create">Add Restaurant</a>
    </div>

</body>
</html>

